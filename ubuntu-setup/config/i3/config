# Set mod key
set $mod Mod4

# Font
font pango:JetBrains Mono 10

# Terminal
bindsym $mod+Return exec kitty

# Browser launcher
bindsym $mod+w exec firefox

# Kill focused window
bindsym $mod+q kill

# App launcher (fixed rofi configuration)
bindsym $mod+d exec rofi -show drun -theme-str 'window {width: 600px;} listview {lines: 10;}'

# Alternative rofi launcher with run mode
bindsym $mod+r exec rofi -show run

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split orientation
bindsym $mod+v split v
bindsym $mod+b split h

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Reload / restart / exit i3
bindsym $mod+Shift+r restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exit

# Floating toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent / child
bindsym $mod+a focus parent
bindsym $mod+z focus child

# Workspace navigation
set $ws1 "1 "
set $ws2 "2 "
set $ws3 "3 "
set $ws4 "4 "
set $ws5 "5 "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

# Status bar
bar {
  status_command i3blocks
  font pango:JetBrains Mono, Font Awesome 10
  position top
  colors {
    background #2E3440
    statusline #D8DEE9
    separator  #4C566A
    focused_workspace  #88C0D0 #88C0D0 #2E3440
    inactive_workspace #3B4252 #3B4252 #D8DEE9
    urgent_workspace   #BF616A #BF616A #2E3440
  }
}

# Set wallpaper
exec --no-startup-id feh --bg-scale ~/Pictures/wallpaper.jpg

# Start compositor
exec --no-startup-id picom

# Notification daemon
exec --no-startup-id dunst

# Screen lock
bindsym $mod+Shift+x exec i3lock -i ~/Pictures/lockscreen.png

# Screenshot
bindsym Print exec flameshot gui

# Volume control
bindsym XF86AudioRaiseVolume exec amixer -q sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q sset Master 5%-
bindsym XF86AudioMute exec amixer -q sset Master toggle

# Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Autostart utilities
exec --no-startup-id nm-applet
exec --no-startup-id redshift-gtk
